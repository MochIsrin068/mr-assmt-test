{
  "root": true,
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:import/errors",
    "plugin:import/warnings",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "airbnb"
  ],
  "rules": {
    "import/extensions": [
      "warn",
      "never",
      {
        "css": "ignorePackages",
        "json": "ignorePackages",
        "md": "ignorePackages"
      }
    ],
    "react/react-in-jsx-scope": [
      "off"
    ],
    "react/jsx-filename-extension": [
      "off"
    ],
    "react/self-closing-comp": "off",
    "react/jsx-props-no-spreading": "off",
    "jsx-quotes": ["error", "prefer-single"]
  },
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "typescript": {
        "project": "./tsconfig.json"
      }
    }
  },
  "plugins": [
    "prettier"
  ]
}